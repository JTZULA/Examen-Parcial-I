import java.util.Scanner;

    public class Control_de_Temperaturas_Diarias {

        static String[] diasSemana = {
                "Lunes", "Martes", "Miércoles", "Jueves",
                "Viernes", "Sábado", "Domingo"
        };

        public static void mostrarTemperaturas(double[] temps) {
            for (int i = 0; i < temps.length; i++) {
                System.out.println(diasSemana[i] + ": " + temps[i] + "°C");
            }
        }

        public static double encontrarMaxima(double[] temps) {
            double max = temps[0];
            for (int i = 1; i < temps.length; i++) {
                if (temps[i] > max) {
                    max = temps[i];
                }
            }
            return max;
        }


        public static void mostrarMaxima(double temperatura) {
            System.out.println("Temperatura máxima: " + temperatura + "°C");
        }

        public static void mostrarMaxima(double temperatura, String dia) {
            System.out.println("Temperatura máxima: " + temperatura + "°C en " + dia);
        }

        public static double sumaRecursiva(double[] temps, int indice) {
            if (indice == temps.length) {
                return 0; // Caso base
            }
            return temps[indice] + sumaRecursiva(temps, indice + 1);
        }

        public static void main(String[] args) {
            Scanner sc = new Scanner(System.in);
            double[] temperaturas = new double[7];
            boolean datosIngresados = false;
            int opcion;

            do {
                System.out.println("\n--- Control de Temperaturas ---");
                System.out.println("1. Ingresar temperaturas");
                System.out.println("2. Mostrar todas las temperaturas");
                System.out.println("3. Mostrar temperatura máxima");
                System.out.println("4. Calcular suma total (recursivo)");
                System.out.println("5. Salir");
                System.out.print("Elige una opción: ");
                opcion = sc.nextInt();

                switch (opcion) {
                    case 1:
                        for (int i = 0; i < temperaturas.length; i++) {
                            System.out.print("Ingresa la temperatura de " + diasSemana[i] + ": ");
                            temperaturas[i] = sc.nextDouble();
                        }
                        datosIngresados = true;
                        break;

                    case 2:
                        if (datosIngresados) {
                            mostrarTemperaturas(temperaturas);
                        } else {
                            System.out.println("No hay datos ingresados todavía.");
                        }
                        break;

                    case 3:
                        if (datosIngresados) {
                            double max = encontrarMaxima(temperaturas);
                            // Encontrar el día correspondiente
                            String diaMax = "";
                            for (int i = 0; i < temperaturas.length; i++) {
                                if (temperaturas[i] == max) {
                                    diaMax = diasSemana[i];
                                    break;
                                }
                            }
                            mostrarMaxima(max);
                            mostrarMaxima(max, diaMax);
                        } else {
                            System.out.println("No hay datos ingresados todavía.");
                        }
                        break;

                    case 4:
                        if (datosIngresados) {
                            double suma = sumaRecursiva(temperaturas, 0);
                            System.out.println("Suma total de temperaturas: " + suma + "°C");
                        } else {
                            System.out.println("No hay datos ingresados todavía.");
                        }
                        break;

                    case 5:
                        System.out.println("Saliendo del programa...");
                        break;

                    default:
                        System.out.println("Opción no válida. Intenta de nuevo.");
                }

            } while (opcion != 5);

            sc.close();
        }
    }
