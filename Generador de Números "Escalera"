import java.util.Scanner;

public class GeneradordeEscaleraEscalera {

    public static void imprimirAscendente(int niveles) {
        for (int i = 1; i <= niveles; i++) {
            imprimirLinea(i); // Llama al método sobrecargado normal
        }
    }

    public static void imprimirDescendente(int niveles) {
        for (int i = niveles; i >= 1; i--) {
            imprimirLinea(i);
        }
    }

    public static void imprimirDescendenteRecursivo(int nivel) {
        if (nivel < 1) return; // Caso base
        imprimirLinea(nivel);
        imprimirDescendenteRecursivo(nivel - 1); // Llamada recursiva
    }

    public static void imprimirLinea(int nivel) {
        for (int i = 1; i <= nivel; i++) {
            System.out.print(i + " ");
        }
        System.out.println();
    }

    public static void imprimirLinea(int nivel, char simbolo) {
        for (int i = 1; i <= nivel; i++) {
            System.out.print(simbolo + " ");
        }
        System.out.println();
    }

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Ingrese el número de niveles: ");
        int n = sc.nextInt();

        if (n < 1) {
            System.out.println("Error: el número debe ser mayor o igual a 1.");
            return;
        }

        imprimirAscendente(n);

        imprimirDescendente(n - 1);

        System.out.println("\n--- Descendente recursiva con símbolos ---");
        imprimirDescendenteRecursivo(n - 1); // Versión recursiva
        System.out.println("\n--- Descendente recursiva con * ---");
        for (int i = n - 1; i >= 1; i--) {
            imprimirLinea(i, '*'); // Usando el método sobrecargado con símbolo
        }

        sc.close();
    }
}
